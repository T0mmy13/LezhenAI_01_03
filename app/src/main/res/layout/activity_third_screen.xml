<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdScreen"
    android:background="@color/DarkBlue">

    <Button
        android:id="@+id/ButtonWriteResult"
        android:layout_width="171dp"
        android:layout_height="54dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/but"
        android:rotationX="2"
        android:text="Назад"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:circularflow_defaultRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewFirstScreen"
        app:layout_constraintVertical_bias="0.815" />

    <TextView
        android:id="@+id/TextViewFirstScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Конвертация едениц
        информации"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextViewResultThirdScreen"
        android:layout_width="324dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:hint="Результат"
        android:paddingLeft="20dp"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/Gray"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/ButtonWriteResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewFirstScreen" />

</androidx.constraintlayout.widget.ConstraintLayout>